   "source": [
    "import re\n",
    "from bs4 import BeautifulSoup\n",
    "\n",
    "CLEANER = re.compile(r'[^\\w\\s\\[\\]/,\\*@\\\"\\.\\?\\(\\)\\+]')\n",
    "\n",
    "def filterText(rawText, CLEANER = CLEANER):\n",
    "    soup = BeautifulSoup(rawText, 'html.parser')\n",
    "    parsed_text = soup.get_text(strip=True)\n",
    "    return re.sub(CLEANER, '', parsed_text)"
   ]
  }
